(claim twice-Vec
  (Pi ([E U]
       [l Nat])
    (-> (Vec E l) (Vec E (twice l)))))
(define twice-Vec
  (lambda (E l)
    (lambda (vec)
      (replace (the (= Nat (double l) (twice l))
                 (symm (twice=double l)))
        (lambda (n)
          (Vec E n))
        (double-Vec E l vec)))))


