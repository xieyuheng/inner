#!/usr/bin/env bash

function build {
    echo "[build]" &&
        npx plaintext toc src -o src/toc &&
        cat README.md <(echo) src/toc > src/index &&
        npx plaintext dir src -o out &&
        true
}

function upload {
    echo "[upload]" &&
        build &&
        vercel out &&
        true
}

function serve {
    echo "[serve]" &&
        build &&
        npx sirv out &&
        true
}

function h {
    echo "commands:"
    for subcommand in $(declare -F | sed 's/declare -f//g')
    do
        echo "  $subcommand"
    done
}

if [ $# == 0 ]
then
    h
else
    for TASK in $@
    do
        $TASK
    done
fi
