#!/usr/bin/env bash

function install {
    npm install
}

function build {
    npx plaintext build src \
        --output out \
        --title INNER \
        --prolog "$(cat README)"
}

function t {
    echo ""
}

function upload {
    publish=~/xyheme/inner-universe

    build &&
        copy out/* $publish &&
        pushd $publish &&
        git add . &&
        git commit -m "up" &&
        git push &&
        popd
}

function main {
    for TASK in "$@"
    do
        "$TASK"
    done
    exit
}

main "$@"
