#!/usr/bin/env bash

function install {
    yarn install
}

function build {
    npx plaintext dir src -o out &&
        plaintext toc src -o out/toc &&
        plaintext file out/toc -o out/toc.html --title "inner | toc" &&
        cat README out/toc > out/index &&
        plaintext file out/index -o out/index.html --title "inner" &&
        true
}

function t {
    echo ""
}

function main {
    for TASK in "$@"
    do
        "$TASK"
    done
    exit
}

main "$@"
